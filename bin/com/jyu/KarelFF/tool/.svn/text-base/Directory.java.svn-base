package com.jyu.KarelFF.tool;

public class Directory {
	
	/**
	 * 获取默认路径
	 */
	public static String getDefDir() {
		return System.getProperty("user.dir") + "\\KarelFF\\";
	}
	
	/**
	 * 获取配置路径
	 */
	public static String getDefConf() {
		return getDefDir() + "conf\\";
	}
	
	/**
	 * 获取地图路径
	 */
	public static String getDefMaps() {
		return getDefDir() + "maps\\";
	}
	
	/**
	 * 获取默认pddl文件名 
	 */
	public static String getDefPDDL() {
		return "domain.pddl";
	}
	
	/**
	 * 获取默认临时文件名 
	 */
	public static String getDefTMP() {
		return "tmp";
	}
	
	/**
	 * 获取默认地图名
	 */
	public static String getDefMAP() {
		return "map";
	}
}
